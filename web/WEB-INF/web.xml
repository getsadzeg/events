<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ge.mziuri.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>ge.mziuri.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EventViewServlet</servlet-name>
        <servlet-class>ge.mziuri.servlet.EventViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventViewServlet</servlet-name>
        <url-pattern>/EventViewServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EventEditServlet</servlet-name>
        <servlet-class>ge.mziuri.servlet.EventEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventEditServlet</servlet-name>
        <url-pattern>/EventEditServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EventUpdateServlet</servlet-name>
        <servlet-class>ge.mziuri.servlet.EventUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventUpdateServlet</servlet-name>
        <url-pattern>/EventUpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EventCreateServlet</servlet-name>
        <servlet-class>ge.mziuri.servlet.EventCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventCreateServlet</servlet-name>
        <url-pattern>/EventCreateServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>ge.mziuri.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/IndexServlet</url-pattern>
    </servlet-mapping>
</web-app>
